{
  "name": "polymarket-alpha-scanner",
  "version": "1.0.0",
  "description": "Polymarket Alpha Scanner mit KI-Research und Deutschland Information Edge",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:web": "tsx watch src/web/server.ts",
    "build": "tsc && cp src/storage/schema.sql dist/storage/",
    "start": "node dist/index.js",
    "start:web": "node dist/web/server.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "terminal": "tsx src/terminal/index.ts"
  },
  "keywords": [
    "polymarket",
    "prediction-markets",
    "trading",
    "scanner",
    "alpha"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "better-sqlite3": "^12.6.2",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "cookie-session": "^2.1.1",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.4.1",
    "ethers": "^6.11.0",
    "express": "^4.18.2",
    "node-telegram-bot-api": "^0.66.0",
    "p-limit": "^5.0.0",
    "p-retry": "^6.2.0",
    "playwright": "^1.41.2",
    "rss-parser": "^3.13.0",
