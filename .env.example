# Polymarket Alpha Scanner - Konfiguration
# Kopiere diese Datei zu .env und fülle die Werte aus

# ═══════════════════════════════════════════════════════════════
#                        SERVER
# ═══════════════════════════════════════════════════════════════
NODE_ENV=production
PORT=3000

# ═══════════════════════════════════════════════════════════════
#                        TELEGRAM
# ═══════════════════════════════════════════════════════════════
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ENABLED=true

# ═══════════════════════════════════════════════════════════════
#                     TRADING / WALLET
# ═══════════════════════════════════════════════════════════════
POLYGON_RPC_URL=https://polygon-rpc.com
WALLET_PRIVATE_KEY=
WALLET_ADDRESS=

# Money Management
MAX_BANKROLL_USDC=1000
MAX_BET_USDC=10
RISK_PER_TRADE_PERCENT=10
KELLY_FRACTION=0.25

# Trading Settings
TRADING_ENABLED=true
REQUIRE_CONFIRMATION=true
MIN_ALPHA_FOR_TRADE=0.5

# ═══════════════════════════════════════════════════════════════
#                     SCANNER SETTINGS
# ═══════════════════════════════════════════════════════════════
SCAN_INTERVAL_MS=300000
MIN_VOLUME_USD=100000
CATEGORIES=politics,economics

# ═══════════════════════════════════════════════════════════════
#                  DEUTSCHLAND INFORMATION EDGE
# ═══════════════════════════════════════════════════════════════
GERMANY_MODE_ENABLED=true
GERMANY_AUTO_TRADE=false
GERMANY_MIN_EDGE=0.10
BUNDESTAG_API_KEY=

# Deutschland Datenquellen
DAWUM_ENABLED=true
DAWUM_POLL_INTERVAL=300000
BUNDESTAG_ENABLED=true
BUNDESTAG_POLL_INTERVAL=600000
DESTATIS_ENABLED=true
DESTATIS_POLL_INTERVAL=1800000
RSS_FEEDS_ENABLED=true
RSS_POLL_INTERVAL=60000

# ═══════════════════════════════════════════════════════════════
#                     AI RESEARCH (MCP/Browser)
# ═══════════════════════════════════════════════════════════════
# Option 1: MCP Server URLs
MCP_CLAUDE_URL=http://localhost:3001
MCP_PERPLEXITY_URL=http://localhost:3002

# Option 2: Browser Session (Dateipfade)
CLAUDE_SESSION_FILE=.claude-session.json
PERPLEXITY_SESSION_FILE=.perplexity-session.json

# ═══════════════════════════════════════════════════════════════
#                     WEB INTERFACE
# ═══════════════════════════════════════════════════════════════
WEB_AUTH_ENABLED=true
WEB_USERNAME=admin
WEB_PASSWORD_HASH=
